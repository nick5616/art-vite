{
    "compilerOptions": {
        "strict": true,
        "module": "ES2020",
        "target": "ES2020",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "strictNullChecks": true,
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "types": ["vite/client", "jest"],
        "jsx": "react",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "moduleResolution": "node"
    },
    "ts-node": {
        "transpileOnly": true,
        "esm": true,
        "compilerOptions": {
            "moduleResolution": "Node16"
        }
    }
}
